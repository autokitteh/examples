load('aws', 'ec2')


def find_vpc_by_name(name):
  vpcs = ec2.describe_vpcs({
    'filters': [
      {
        'name': 'tag:Name',
        'values': [name],
      }
    ]
  }).get('vpcs', [])

  if not vpcs:
    return None

  if len(vpcs) > 1:
    fail('multiple vpcs found with the name %s' % name)

  return vpcs[0]


def list_subnets(vpc_id):
  return ec2.describe_subnets({
    'filters': [
      {
        'name': 'vpc-id',
        'values': [vpc_id],
      }
    ]
  }).get('subnets', [])
